pipeline {
  agent {
    docker { image 'liquibase/liquibase:4.4.2' }
  }
  environment {
    POSTGRES_CREDS=credentials('postgres-credentials')
  }
  stages {
    stage('Status') {
      steps {
        sh 'liquibase status --url="jdbc:postgresql://localhost:5432/France" --changeLogFile=my_app-wrapper.xml --username=$POSTGRES_CREDS_USR --password=$POSTGRES_CREDS_PSW'
      }
    }
    stage('Update') {
      steps {
        sh 'liquibase update --url="jdbc:postgresql://localhost:5432/France" --changeLogFile=my_app-wrapper.xml --username=$POSTGRES_CREDS_USR --password=$POSTGRES_CREDS_PSW'
      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}